{
  "extends": ["wesbos"],
  "rules": {
    "no-console": 2,
    "no-use-before-define": ["error", "nofunc"],
    "quotes": [
      2,
      "double",
      {
        "avoidEscape": true,
        "allowTemplateLiterals": true
      }
    ],
    "spaced-comment": [
      "error",
      "always",
      {
        "markers": ["*", "?", "!"]
      }
    ],
    "prettier/prettier": [
      "error",
      {
        "endOfLine": "crlf",
        "singleQuote": false,
        "trailingComma": "all",
        "printWidth": 120
      }
    ]
  }
}
